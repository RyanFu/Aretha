<resources>

    <attr name="duration" format="integer" />
    <attr name="dotRadius" format="dimension" />
    <attr name="dotSpacing" format="dimension" />
    <attr name="dotColor" format="color" />
    <attr name="radius" format="dimension" />
    <attr name="interpolator" format="reference" />

    <declare-styleable name="SectorView">
        <attr name="radius" />
        <attr name="gravity">
            <flag name="center" value="0x11" />
            <flag name="top" value="0x30" />
            <flag name="left" value="0x03" />
            <flag name="bottom" value="0x50" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="animationOffset" format="integer" />
        <attr name="duration" />
        <attr name="interpolator" />
    </declare-styleable>
    <declare-styleable name="AccelerateLinearDecelerateProgressBar">
        <attr name="dotCount" format="integer" />
        <attr name="duration" />
        <attr name="dotRadius" />
        <attr name="dotSpacing" />
        <attr name="dotColor" />
    </declare-styleable>
    <declare-styleable name="PageIndicator">
        <attr name="activePage" format="integer" />
        <attr name="pageCount" format="integer" />
        <attr name="dotRadius" />
        <attr name="dotSpacing" />
        <attr name="dotColor" />
    </declare-styleable>
    <declare-styleable name="ToggleView">
        <attr name="toggle">
            <enum name="on" value="1" />
            <enum name="off" value="0" />
        </attr>
        <attr name="radius" />
    </declare-styleable>
    <declare-styleable name="Workspace">
        <attr name="showChild" format="integer" />
        <!-- define the min velocity to perform scroll page action -->
        <attr name="snapVelocity" format="integer">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="duration" />
        <attr name="interpolator" />
        <attr name="bounce" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ClickWheelView">
        <attr name="radius" />
        <attr name="centerX" format="integer" />
        <attr name="centerY" format="integer" />
        <attr name="flingEnabled" format="boolean" />
    </declare-styleable>

</resources>