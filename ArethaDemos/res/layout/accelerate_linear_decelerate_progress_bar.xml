<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aretha="http://schemas.android.com/apk/res/com.arethademo" >

    <com.aretha.widget.AccelerateLinearDecelerateProgressBar
        android:id="@id/accelerateLinearDecelerateProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/dot_plus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/dot_plus" />

            <Button
                android:id="@+id/dot_minus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/dot_minus" />

            <Button
                android:id="@+id/space_plus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/space_plus" />

            <Button
                android:id="@+id/space_minus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/space_minus" />

            <Button
                android:id="@+id/radius_plus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/dot_radius_plus" />

            <Button
                android:id="@+id/radius_minus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/dot_radius_minus" />

            <Button
                android:id="@+id/duration_plus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/duration_plus" />

            <Button
                android:id="@+id/duration_minus"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/duration_minus" />

            <Button
                android:id="@+id/yellow"
                style="@style/aretha_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/yellow" />
        </LinearLayout>
    </HorizontalScrollView>

</merge>