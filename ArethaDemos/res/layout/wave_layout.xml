                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wave_layout_d"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wave_layout_e"
                    android:textSize="10sp" />

